@model IList<ActiveTrafficIncidentInfoSelect_Result>

@{
    ViewBag.Title = "Traffic Incidents";
}

<ol class="breadcrumb">
    <li><a href="@Url.Action("Index", "Home")">Home</a></li>
    <li><a href="@Url.Action("Index")">ANI</a></li>
    <li class="active">Traffic</li>
</ol>

<div class="page-header">
    <h1>@ViewBag.Title</h1>
</div>

@if (!Model.Any())
{
    <p class="alert alert-info">
        No active traffic incidents for this region.
    </p>
}
else
{
    <div class="panel panel-default">
        <div class="panel-heading">
            Current Traffic Incidents
        </div>

        <div class="panel-body">
            <table class="table table-responsive table-condensed">
                <thead>
                    <tr>
                        <th>Severity</th>
                        <th>Type</th>
                        <th>Description</th>
                        <th>Start</th>
                        <th>End</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var m in Model)
                {
                        <tr class="@if (m.SeverityID >= 3)
                               {<text>danger</text>
                               }
                               else if (m.SeverityID >= 2)
                               {
                                   <text>warning</text>
                               }">
                            <td>
                                @m.SeverityName
                            </td>
                            <td>
                                @m.TypeName
                            </td>
                            <td>
                                @m.Description (@m.Lat, @m.Lng)
                            </td>
                            <td>
                                @if (m.StartTimeUTC.HasValue)
                                {
                                    @m.StartTimeUTC.Value.ToLocalTime().ToString("g")
                                }
                            </td>
                            <td>
                                @if (m.EndTimeUTC.HasValue)
                                {
                                    @m.EndTimeUTC.Value.ToLocalTime().ToString("g")
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}
