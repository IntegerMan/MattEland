@model IList<ActiveWeatherPredictionsSelect_Result>

@{
    ViewBag.Title = "Weather Forecasts for 43035";
}

<ol class="breadcrumb">
    <li><a href="@Url.Action("Index", "Home")">Home</a></li>
    <li><a href="@Url.Action("Index")">ANI</a></li>
    <li class="active">Weather</li>
</ol>

<div class="page-header">
    <h1>@ViewBag.Title</h1>
</div>

@if (!Model.Any())
{
    <p class="alert alert-danger">
        No forecasts have been recorded. This area may be outside of the service area.
    </p>
}
else
{
    <div class="alert alert-warning">
        <p>
            Frost Time is still in early development as a neural network is still being trained as data accumulates. Predictions may be comically bad during this time.
        </p>
        <br/>
        <a class="btn btn-primary" href="@Url.Action("Frost")">
            View / Enter Frost Data
        </a>
    </div>

    <div class="panel panel-default">
        <div class="panel-heading">
            Weather Forecast
        </div>

        <div class="panel-body">
            <table class="table table-responsive table-condensed">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Forecast</th>
                        <th>Low</th>
                        <th>High</th>
                        <th>Minutes to Defrost</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var m in Model)
                {
                        <tr class="@if (m.SeverityID >= 3)
                               {<text>danger</text>
                               }
                               else if (m.SeverityID >= 2)
                               {
                                   <text>warning</text>
                               }">
                            <td>
                                @m.PredictionDateUTC.ToString("ddd M/d")
                            </td>
                            <td>
                                @m.WeatherCodeName
                            </td>
                            <td class="blue">
                                @m.Low
                            </td>
                            <td class="red">
                                @m.High
                            </td>
                            <td>
                                @if (m.MinutesToDefrost.HasValue)
                                {
                                    if (m.MinutesToDefrost <= 0.1)
                                    {
                                        <text><span class="text-muted">No Frost</span></text>
                                    }
                                    else
                                    {
                                        @m.MinutesToDefrost.Value.ToString("0.00")
                                        <text>Minutes</text>
                                    }
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}
