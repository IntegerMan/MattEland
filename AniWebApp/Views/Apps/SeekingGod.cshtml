@{
    ViewBag.Title = "Seeking God";
}

@section heading {
    <script type="text/javascript" src="~/scripts/easySlider1.7.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $(".slider").easySlider({
                auto: true,
                continuous: true,
                pause: 5000,
                controlsShow: false
            });
        });
    </script>

    <style type="text/css">

        /* Phone screenshot Slider */
         .phonescreens {
             background:transparent url(@Url.Content("~/images/phonebackground.png")) no-repeat;
             height:800px;
             /*width: 340px;*/
         }

        .slider ul, .slider li {
            margin:0;
            padding:0;
            list-style:none;
        }

        .slider li {
            width:240px;
            height:400px;
            overflow:hidden;
        }

		.phonescreens .slider {
			-moz-box-shadow: 0px 0px 3px #333333;
			-webkit-box-shadow: 0px 0px 3px #333333;
			box-shadow: 0px 0px 3px #333333;
		}
    </style>
}

<ol class="breadcrumb">
    <li><a href="@Url.Action("Index", "Home")">Home</a></li>
    <li><a href="@Url.Action("Index", "Apps")">Apps</a></li>
    <li class="active">Seeking God</li>
</ol>

<div class="page-header">
    <h1>@ViewBag.Title</h1>

    <div class="row">
        <div class="col-md-10">
            <p class="lead">
                An interactive gospel presentation for Windows Phone
            </p>
        </div>
        <div class="col-md-2">
            <a class="btn btn-primary" href="http://www.windowsphone.com/en-US/apps/80af49a1-0f8e-409d-87a3-5f7cf39dc5ae">Download</a>
        </div>
    </div>

</div>

<div class="row">
    <div class="col-md-4">
        <div class="phonescreens">
            <div class="slider" style="margin-left: 50px; padding-top: 56px;">
                <ul>
                    <li><img src="~/images/screenshots/SeekingGodSS2.png" alt="Main Panorama" /></li>
                    <li><img src="~/images/screenshots/SeekingGodSS1.png" alt="Gospel Presentation" /></li>
                    <li><img src="~/images/screenshots/SeekingGodSS3.png" alt="Accept Christ" /></li>
                    <li><img src="~/images/screenshots/SeekingGodSS4.png" alt="Helpful Verses" /></li>
                </ul>
            </div>
        </div>

    </div>
    <div class="col-md-8">
        <div>
            <h2>Features</h2>
            <ul>
                <li>Animated Gospel Presentation</li>
                <li>Next steps for new believers</li>
                <li>Quick contact forms to get in touch with an Online Missionary</li>
                <li>Share the gospel with others</li>
                <li>Verses geared towards evangelism</li>
                <li>Metro-style user interface</li>
            </ul>
        </div>

        <br />
        <div>
            <h2>User Quotes</h2>

            <blockquote>
                <p>I wish we had more apps like this in the marketplace.</p>
            </blockquote>
            <blockquote>
                <p>Great app! I love how it gives me hope. Also love the animation my kids think its sooo cool!</p>
            </blockquote>
            <blockquote>
                <p>I love the simplicity and beauty of it. The helpful bible verses are uplifting!</p>
            </blockquote>
            <blockquote>
                <p>Finally something actually useful!</p>
            </blockquote>
        </div>

    </div>
</div>
