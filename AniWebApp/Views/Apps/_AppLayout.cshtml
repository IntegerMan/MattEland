@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section heading {
    <script type="text/javascript" src="~/scripts/easySlider1.7.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $(".slider").easySlider({
                auto: true,
                continuous: true,
                pause: 5000,
                controlsShow: false
            });
        });
    </script>

    <style type="text/css">

        /* Phone screenshot Slider */
         .phonescreens {
             background:transparent url(@Url.Content("~/images/phonebackground.png")) no-repeat;
             height:800px;
         }

        .slider ul, .slider li {
            margin:0;
            padding:0;
            list-style:none;
        }

        .slider li {
            width:240px;
            height:400px;
            overflow:hidden;
        }

		.phonescreens .slider {
			-moz-box-shadow: 0px 0px 3px #333333;
			-webkit-box-shadow: 0px 0px 3px #333333;
			box-shadow: 0px 0px 3px #333333;
		}
    </style>
}

<ol class="breadcrumb">
    <li><a href="@Url.Action("Index", "Home")">Home</a></li>
    <li><a href="@Url.Action("Index", "Apps")">Apps</a></li>
    <li class="active">@ViewBag.Title</li>
</ol>

<div class="page-header">
    <h1>@ViewBag.Title</h1>

    <div class="row">
        <div class="col-md-10">
            <p class="lead">
                @ViewBag.Tagline
            </p>
        </div>
        <div class="col-md-2">
            <a class="btn btn-primary" href="@ViewBag.DownloadUrl">Download</a>
        </div>
    </div>

</div>

<div class="row">
    <div class="col-md-4">
        <div class="phonescreens">
            <div class="slider" style="margin-left: 50px; padding-top: 56px;">
                <ul>
                    @RenderSection("AppScreens", true)
                </ul>
            </div>
        </div>

    </div>
    <div class="col-md-8">
        <div>
            <h2>Features</h2>
            <ul>
                @RenderSection("AppFeatures", true)
            </ul>
        </div>

        <br />
        <div>
            <h2>User Quotes</h2>

            @RenderSection("AppQuotes", true)
        </div>

    </div>
</div>
