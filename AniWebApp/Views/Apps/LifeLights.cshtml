@{
    ViewBag.Title = "Life Lights";
    ViewBag.Lead = "Life Lights helps you track and prioritize the ongoing chores and other tasks in your life to help you visually determine what should be focused on next.";
    ViewBag.DownloadUrl = "http://www.windowsphone.com/en-us/store/app/life-lights/ea971839-ae30-e011-854c-00237de2db9e";
    Layout = "_AppLayout.cshtml";
}

