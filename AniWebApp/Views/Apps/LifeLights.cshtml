@section AppFeatures {
<li>View a list of tasks by priority, or grouped by category or status</li>
<li>Task status chart</li>
<li>Pin tasks as live tiles</li>
<li>Categorize tasks</li>
<li>Define custom categories</li>
<li>Store notes on individual tasks</li>
<li>E-Mail your current task details</li>
}

@section AppQuotes
{
    <blockquote>
        <p>Addictively helps you prioritize your life.</p>
    </blockquote>
    <blockquote>
        <p>Simple, yet very effective!</p>
    </blockquote>
}
