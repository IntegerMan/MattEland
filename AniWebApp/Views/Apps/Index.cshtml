@{
    ViewBag.Title = "My Apps";
}

<ol class="breadcrumb">
    <li><a href="@Url.Action("Index", "Home")">Home</a></li>
    <li class="active">Apps</li>
</ol>

<div class="page-header">
    <h1>@ViewBag.Title</h1>

